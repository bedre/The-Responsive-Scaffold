<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.6//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension
	version="2.5"
	type="template"
	client="site">
	<name>responsive_template</name>
	<creationDate>03/30/12</creationDate>
	<author>Torkil Sinkaberg Johnsen</author>
	<authorEmail>torkil@bedre.no</authorEmail>
	<authorUrl>http://www.bedre.no</authorUrl>
	<copyright>Copyright (C) 2012 Skagen Hotell.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>1.0</version>
	<description></description>
	<files/>

	<positions>
		<position>mainmenu</position>
	</positions>

	<languages folder="language">
		<language tag="nb-NO">nb-NO/nb-NO.tpl_responsive_template.ini</language>
		<language tag="nb-NO">nb-NO/nb-NO.tpl_responsive_template.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="LOCALIZATION">

				<field name="phone" type="text" default=""
					label="TPL_RWDTPL_FIELD_PHONE"
					description="TPL_RWDTPL_FIELD_PHONE_DESC"
					filter="string" />

				<field name="email" type="validate-email" default=""
					label="TPL_RWDTPL_FIELD_EMAIL"
					description="TPL_RWDTPL_FIELD_EMAIL_DESC"
					filter="string" />

				<field name="company_name" type="text" default=""
					label="TPL_RWDTPL_FIELD_COMPANY_NAME"
					description="TPL_RWDTPL_FIELD_COMPANY_NAME_DESC"
					filter="string" />

				<field name="street_address" type="text" default=""
					label="TPL_RWDTPL_FIELD_STREET_ADDRESS"
					description="TPL_RWDTPL_FIELD_STREET_ADDRESS_DESC"
					filter="string" />

				<field name="postal_code" type="text" default=""
					label="TPL_RWDTPL_FIELD_POSTAL_CODE"
					description="TPL_RWDTPL_FIELD_POSTAL_CODE_DESC"
					filter="string" />

				<field name="locality" type="text" default=""
					label="TPL_RWDTPL_FIELD_LOCALITY"
					description="TPL_RWDTPL_FIELD_LOCALITY_DESC"
					filter="string" />

				<field name="region" type="text" default=""
					label="TPL_RWDTPL_FIELD_REGION"
					description="TPL_RWDTPL_FIELD_REGION_DESC"
					filter="string" />

				<field name="country" type="text" default=""
					label="TPL_RWDTPL_FIELD_COUNTRY"
					description="TPL_RWDTPL_FIELD_COUNTRY_DESC"
					filter="string" />

				<field name="map_url" type="text" default=""
					label="TPL_RWDTPL_FIELD_MAP_URL"
					description="TPL_RWDTPL_FIELD_MAP_URL_DESC"
					filter="string" />

				<field name="facebook_url" type="text" default=""
					label="TPL_RWDTPL_FIELD_FACEBOOK_URL"
					description="TPL_RWDTPL_FIELD_FACEBOOK_URL_DESC"
					filter="string" />

			</fieldset>
		</fields>
	</config>
</extension>
